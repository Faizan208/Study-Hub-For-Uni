{
  "entities": {
    "Admin": {
      "title": "Admin",
      "type": "object",
      "description": "Represents an administrator user with elevated privileges to manage resources and assignments.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the Admin entity."
        },
        "name": {
          "type": "string",
          "description": "The full name of the administrator."
        },
        "email": {
          "type": "string",
          "description": "The email address of the administrator.",
          "format": "email"
        },
        "role": {
          "type": "string",
          "description": "The role of the administrator (e.g., 'superadmin', 'editor')."
        }
      },
      "required": [
        "id",
        "name",
        "email",
        "role"
      ]
    },
    "Assignment": {
      "title": "Assignment",
      "type": "object",
      "description": "Represents an assignment that can be uploaded and managed by administrators.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the Assignment entity."
        },
        "title": {
          "type": "string",
          "description": "The title of the assignment."
        },
        "description": {
          "type": "string",
          "description": "A detailed description of the assignment."
        },
        "price": {
            "type": "number",
            "description": "The price of the item."
        },
        "image": {
            "type": "string",
            "description": "The image URL for the item."
        },
        "type": {
            "type": "string",
            "description": "The type of the item (e.g., assignment)."
        },
        "semester": {
            "type": "string",
            "description": "The semester this item belongs to."
        },
        "uploadDate": {
          "type": "string",
          "description": "The date and time when the assignment was uploaded.",
          "format": "date-time"
        },
        "adminId": {
          "type": "string",
          "description": "Reference to the Admin who uploaded the assignment."
        }
      },
      "required": [
        "title",
        "description",
        "price",
        "image",
        "type",
        "semester",
        "adminId"
      ]
    },
    "Quiz": {
        "title": "Quiz",
        "type": "object",
        "description": "Represents a quiz.",
        "properties": {
            "title": { "type": "string" },
            "description": { "type": "string" },
            "price": { "type": "number" },
            "image": { "type": "string" },
            "type": { "type": "string", "enum": ["quiz"] },
            "semester": { "type": "string" }
        },
        "required": ["title", "description", "price", "image", "type", "semester"]
    },
    "Practical": {
        "title": "Practical",
        "type": "object",
        "description": "Represents a lab practical.",
        "properties": {
            "title": { "type": "string" },
            "description": { "type": "string" },
            "price": { "type": "number" },
            "image": { "type": "string" },
            "category": { "type": "string" },
            "semester": { "type": "string" }
        },
        "required": ["title", "description", "price", "image", "category", "semester"]
    },
    "UserProfile": {
      "title": "User Profile",
      "type": "object",
      "description": "Represents a regular user's profile.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the User entity (matches Firebase Auth UID)."
        },
        "email": {
          "type": "string",
          "description": "The email address of the user.",
          "format": "email"
        },
        "semester": {
          "type": "string",
          "description": "The user's selected semester."
        },
        "fullName": {
          "type": "string",
          "description": "The user's full name."
        },
        "rollNo": {
          "type": "string",
          "description": "The user's university roll number."
        },
        "section": {
          "type": "string",
          "description": "The user's section."
        },
        "degree": {
          "type": "string",
          "description": "The user's degree program (e.g., BSCS)."
        }
      },
      "required": [
        "id",
        "email",
        "fullName",
        "rollNo",
        "section",
        "degree",
        "semester"
      ]
    }
  },
  "auth": {
    "providers": [
      "password"
    ]
  },
  "firestore": {
    "/admins/{adminId}": {
      "schema": {
        "$ref": "#/entities/Admin"
      },
      "description": "Stores administrator profiles. Accessible only to authenticated admins."
    },
    "/assignments/{assignmentId}": {
      "schema": {
        "$ref": "#/entities/Assignment"
      },
      "description": "Stores assignment details. Includes denormalized 'adminId' for authorization."
    },
    "/quizzes/{quizId}": {
      "schema": {
        "$ref": "#/entities/Quiz"
      },
      "description": "Stores quiz details. Writable by admins."
    },
    "/practicals/{practicalId}": {
      "schema": {
        "$ref": "#/entities/Practical"
      },
      "description": "Stores lab practical details. Writable by admins."
    },
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/UserProfile"
      },
      "description": "Stores public profiles for regular users."
    }
  }
}
